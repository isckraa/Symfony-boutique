{% extends 'base.html.twig' %}

{% block title %}command index{% endblock %}

{% block body %}
    <div class="container">
        <div id="commands" class="mt-3">
            <div class="jumbotron">
                <h1>Commandes</h1>
            </div>

            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Numéro de la commande</th>
                        <th>Statut</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for command in commands %}
                    <tr>
                        <td>{{ command.id }}</td>
                        <td>{{ command.orderNumber }}</td>
                        <td>{{ command.state }}</td>
                        <td>{{ command.dateTime ? command.dateTime|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('command_show', {'id': command.id}) }}" class="btn btn-primary">show</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de résultats</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
